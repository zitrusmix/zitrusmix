{
    "name": "zitrusmix",
    "version": "0.16.1-SNAPSHOT.0",
    "description": "A (static) content generator and mixer",
    "main": "./dist/lib/index.js",
    "types": "./dist/lib/index.d.ts",
    "files": [
        "dist/",
        "lib/",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "build": "npm run compile && npm run lint && npm run test",
        "compile": "tsc",
        "lint": "eslint . --ext .ts",
        "fix": "eslint . --ext .ts --fix",
        "test": "./node_modules/.bin/mocha --require ts-node/register ./test/**/*.test.ts",
        "test:single": "./node_modules/.bin/mocha --require ts-node/register",
        "coverage": "nyc npm run test",
        "prepublishOnly": "npm run build",
        "postpublish": "npm run version:prepatch",
        "release:major": "npm version major --git-tag-version -m \"Update version to \\\"%s\\\"\" && npm publish && npm run push",
        "release:minor": "npm version minor --git-tag-version -m \"Update version to \\\"%s\\\"\" && npm publish && npm run push",
        "release:patch": "npm version patch --git-tag-version -m \"Update version to \\\"%s\\\"\" && npm publish && npm run push",
        "version:prepatch": "npm version prepatch && npm run commitVersionUpdate",
        "commitVersionUpdate": "git add package.json package-lock.json && git commit -m \"Update version to \\\"%npm_package_version%\\\"\"",
        "push": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zitrusmix/zitrusmix.git"
    },
    "keywords": [
        "SSG",
        "static",
        "site",
        "generator",
        "zitrus",
        "citrus"
    ],
    "author": "Christian Schuller <cschuller@servusalps.com>",
    "license": "BSD-3-Clause",
    "bugs": {
        "url": "https://github.com/zitrusmix/zitrusmix/issues"
    },
    "homepage": "https://github.com/zitrusmix/zitrusmix#readme",
    "devDependencies": {
        "@types/chai": "^4.2.11",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.13.0",
        "@typescript-eslint/eslint-plugin": "^2.28.0",
        "@typescript-eslint/parser": "^2.28.0",
        "chai": "^4.2.0",
        "eslint": "^6.8.0",
        "mocha": "^7.1.1",
        "nyc": "^15.0.1",
        "ts-node": "^8.8.2",
        "typescript": "^3.8.3"
    },
    "engines": {
        "node": ">=12.0.0"
    },
    "dependencies": {}
}
