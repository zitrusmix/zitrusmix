{
    "name": "zitrusmix",
    "version": "0.10.1",
    "description": "A (static) content generator and mixer",
    "main": "./dist/lib/index.js",
    "types": "./dist/lib/index.d.ts",
    "files": [
        "dist/",
        "lib/",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "build": "npm run compile && npm run lint",
        "compile": "tsc",
        "lint": "eslint . --ext .ts",
        "fix": "eslint . --ext .ts --fix",
        "test": "mocha -r ts-node/register ./test/**/*.test.ts",
        "single-test": "npx mocha -r ts-node/register",
        "coverage": "nyc npm run test",
        "prepublishOnly": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zitrusmix/zitrusmix.git"
    },
    "keywords": [
        "SSG",
        "static",
        "site",
        "generator",
        "zitrus",
        "citrus"
    ],
    "author": "Christian Schuller <cschuller@servusalps.com>",
    "license": "BSD-3-Clause",
    "bugs": {
        "url": "https://github.com/zitrusmix/zitrusmix/issues"
    },
    "homepage": "https://github.com/zitrusmix/zitrusmix#readme",
    "devDependencies": {
        "@types/chai": "^4.2.7",
        "@types/mocha": "^5.2.7",
        "@types/node": "^13.1.8",
        "@typescript-eslint/eslint-plugin": "^2.16.0",
        "@typescript-eslint/parser": "^2.17.0",
        "chai": "^4.2.0",
        "eslint": "^6.8.0",
        "mocha": "^7.0.0",
        "nyc": "^15.0.0",
        "ts-node": "^8.6.1",
        "typescript": "^3.7.5"
    },
    "engines": {
        "node": ">=12.0.0"
    },
    "dependencies": {}
}
